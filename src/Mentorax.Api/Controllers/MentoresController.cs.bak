using Microsoft.AspNetCore.Mvc;
using Mentorax.Api.Data;
using Mentorax.Api.Models;

namespace Mentorax.Api.Controllers
{
    [ApiController]
    [Route(""/api/v1/mentores"")]
    public class MentoresController : ControllerBase
    {
        private readonly ApplicationDbContext _context;
        public MentorsController(ApplicationDbContext context) { _context = context; }

        [HttpPost]
        public async Task<IActionResult> Create([FromBody] Mentor m)
        {
            if (m == null) return BadRequest();
            _context.Mentors.Add(m);
            await _context.SaveChangesAsync();
            return CreatedAtAction(nameof(GetById), new { id = m.Id }, m);
        }

        [HttpGet(""{id}"")]
        public async Task<IActionResult> GetById(Guid id)
        {
            var m = await _context.Mentors.FindAsync(id);
            if (m == null) return NotFound();
            return Ok(m);
        }
    }
}
